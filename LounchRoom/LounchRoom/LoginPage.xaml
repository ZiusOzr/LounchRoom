<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:veiwmodels="clr-namespace:LounchRoom.Core.VeiwModels;assembly=LounchRoom.Core" x:DataType="veiwmodels:LoginPageVM"
             x:Class="LounchRoom.LoginPage">

    <StackLayout BackgroundColor="White">
        <Image Source="LogoFullDark_1.png" WidthRequest="325" Aspect="AspectFit" Margin="0,100,0,25" />
        <Entry x:Name="loginEntry" 
               Placeholder="Логин" 
               PlaceholderColor="#B1B1B1" 
               FontFamily="Manrope-Regular" 
               TextColor="#2D2D2D" 
               Margin="50,0,50,25" 
               Text="{Binding LoginEntryText}"/>
        <Button Text="Войти" 
                BackgroundColor="#DB394B" 
                Margin="50,0" 
                CornerRadius="50" 
                TextColor="White"  
                FontFamily="Manrope-Regular" 
                Command="{Binding LoginButton}"/>
    </StackLayout>

</ContentPage>
